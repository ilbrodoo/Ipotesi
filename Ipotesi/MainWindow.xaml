<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Db="clr-namespace:Ipotesi.Db" x:Class="Ipotesi.MainWindow"
    Title="Malattie and Sintomi" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="301*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>

        <!-- TextBox per il filtro -->
        <TextBox x:Name="txtFilter" Margin="5,5,5,0" Grid.Row="0" Grid.ColumnSpan="2" TextChanged="FilterTextBox_TextChanged" />

        <!-- ListBox per selezioni multiple -->
        <ListBox x:Name="lstSintomi" Margin="5,22,5,55" SelectionMode="Multiple" 
                 ItemsSource="{Binding FilteredSintomi}" DisplayMemberPath="Sintomo"
                 Grid.ColumnSpan="2" Grid.Row="2"/>

        <!-- Pulsante Cerca Malattia -->
        <Button Content="Ricerca Malattia" Margin="10,246,162,31"  Grid.Row="2"/>
    </Grid>


</Window>
